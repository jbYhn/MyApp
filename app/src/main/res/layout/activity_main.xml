<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xmmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- A RecyclerView with some commonly used attributes -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        xmmlns:layout_constraintBottom_toBottomOf="parent"
        xmmlns:layout_constraintEnd_toEndOf="parent"
        xmmlns:layout_constraintHorizontal_bias="1.0"
        xmmlns:layout_constraintStart_toStartOf="parent"
        xmmlns:layout_constraintTop_toBottomOf="@+id/imageView2"
        xmmlns:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmmlns:layout_constraintStart_toStartOf="parent"
        xmmlns:layout_constraintTop_toTopOf="parent"
        xmmlns:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chuck Norris Jokes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold|italic"
        xmmlns:layout_constraintBottom_toTopOf="@+id/my_recycler_view"
        xmmlns:layout_constraintEnd_toEndOf="parent"
        xmmlns:layout_constraintStart_toEndOf="@+id/imageView2"
        xmmlns:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>